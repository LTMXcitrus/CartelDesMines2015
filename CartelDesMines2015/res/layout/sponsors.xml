<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gris"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/alten"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="5dp"
        android:adjustViewBounds="true"
        android:background="@color/blanc"
        android:padding="5dp"
        android:scaleType="fitStart"
        android:src="@drawable/logo_alten" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/mines_nantes_alumni"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:adjustViewBounds="true"
                android:background="@color/blanc"
                android:padding="5dp"
                android:scaleType="fitStart"
                android:src="@drawable/logo_mines_nantes_alumni" />

            <ImageView
                android:id="@+id/socotec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:adjustViewBounds="true"
                android:background="@color/blanc"
                android:padding="5dp"
                android:scaleType="fitStart"
                android:src="@drawable/socotec" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/credit_mutuel"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="@color/blanc"
                android:padding="5dp"
                android:scaleType="fitStart"
                android:src="@drawable/logo_credit_mutuel" />

            <ImageView
                android:id="@+id/spie"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="@color/blanc"
                android:padding="5dp"
                android:scaleType="fitStart"
                android:src="@drawable/spie" />

            <ImageView
                android:id="@+id/sopra"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="@color/blanc"
                android:padding="5dp"
                android:scaleType="fitStart"
                android:src="@drawable/soprasteria" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/cartel_et_emn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:background="@color/blanc"
        android:padding="5dp"
        android:scaleType="fitStart"
        android:src="@drawable/logo_cartel_et_emn_grand" />

</LinearLayout>